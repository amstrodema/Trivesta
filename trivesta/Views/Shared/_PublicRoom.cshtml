@model Trivesta.Model.ViewModel.RoomsVM
<div id="about" class="about-us section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 align-self-center">
                <div class="section-heading">
                    <h4>Public Rooms <em>Are For</em> All Users</h4>
                    <img src="assets/images/heading-line-dec.png" alt="">
                    <p>This is like stepping into a vibrant virtual hangout that's open to you and everyone else, including guests.</p>
                </div>
                <div class="row">
                    @{
                        var val = Model.Rooms.Where(p => p.RoomTypeTag == "Public");
                    if (string.IsNullOrEmpty(Model.t))
                    {
                        <partial name="_RoomList" model="val"/>
                    }
                    else
                    {
                            <partial name="_RoomList2" model="Model" />
                    }
                    }
                    @if (string.IsNullOrEmpty(Model.t))
                    {
                        <div class="col-lg-12">
                            <p>You are soley responsibile for any information shared in any room, discussion or conversation anywhere on this platform.</p>
                            <div class="gradient-button">
                                <a asp-action="index" asp-controller="rooms" asp-route-t="public">More Public Rooms</a>
                                <a asp-action="create" asp-controller="rooms" asp-route-t="public">Create New Room</a>

                            </div>
                        </div>
                    }

                </div>

            </div>
        </div>
    </div>
</div>
