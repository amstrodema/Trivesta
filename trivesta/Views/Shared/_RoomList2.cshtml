@model Trivesta.Model.ViewModel.RoomsVM
<div class="forceGraft row">
    @foreach (var room in Model.Rooms.Where(p => p.RoomTypeTag == Model.RoomType.Tag))
    {
        <div class="col-md-4 col-lg-3 col-6">
            <div class="box-item">
                <header><a asp-action="index" asp-controller="room" asp-route-t="@room.Tag">@room.Name</a></header>
                <p>
                    @try
                    {
                    <span>@room.Description.Substring(0,30)</span>
                    }
                    catch (Exception)
                    {
                    <span>@room.Description</span>
                    }
                    <br /><small>ID: @room.Code &nbsp;|&nbsp; <i class="fa fa-user"></i>&nbsp;780</small>
                    
                    @if (Model.LoggedInUser != null && Model.LoggedInUser.ID == room.CreatedBy)
                    {
                        <br>
                        <a href="#"><i class="fa fa-trash text-danger"></i></a>
                    }
                </p>
            </div>
        </div>
    }
    @if (Model.Rooms.Count() < 1)
    {
        <partial name="_NoContent" />
    }
</div>
@if (Model.Rooms.Count() > 0)
{
    <div class="col-lg-12">
        <p>You are soley responsibile for any information shared in any room, discussion or conversation anywhere on this platform.</p>
        <div class="gradient-button">
            <a asp-action="index" asp-controller="rooms" asp-route-t="classy">&lt;&lt;</a> ...
            <a asp-action="index" asp-controller="rooms" asp-route-t="classy">1</a>
            <a asp-action="index" asp-controller="rooms" asp-route-t="classy">2</a> ...
            <a asp-action="index" asp-controller="rooms" asp-route-t="classy">&gt;&gt;</a>
        </div>
    </div>
}
