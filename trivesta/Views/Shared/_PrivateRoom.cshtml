@model Trivesta.Model.ViewModel.RoomsVM
<div id="about" class="about-us section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 align-self-center">
                <div class="section-heading">
                    <h4>Private Rooms <em>Are Meant For</em> Only Registered Users</h4>
                    <img src="assets/images/heading-line-dec.png" alt="">
                    <p>This room is open to you and everyone else, except guests. Owners may or may not demand rent from users</p>
                </div>
                <div class="row">
                    @if (string.IsNullOrEmpty(Model.t))
                    {
                        <partial name="_RoomList" />
                    }
                    else
                    {
                        <partial name="_RoomList2" />
                    }
                    @if (string.IsNullOrEmpty(Model.t))
                    {
                        <div class="col-lg-12">
                            <p>You are soley responsibile for any information shared in any room, discussion or conversation anywhere on this platform.</p>
                            <div class="gradient-button">
                                <a asp-action="index" asp-controller="rooms" asp-route-t="private">More Private Rooms</a>
                                <a asp-action="create" asp-controller="rooms" asp-route-t="private">Create New Room</a>

                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
