@model Trivesta.Model.ViewModel.RoomsVM
<div id="about" class="about-us section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 align-self-center">
                <div class="section-heading">
                    <h4>Personal Rooms <em>Are Just For</em> You</h4>
                    <img src="assets/images/heading-line-dec.png" alt="">
                    <p>Cozy corners designed just for you. Intimate one-on-one or small group conversations, ensuring a confidential setting for personal talks</p>
                </div>
                <div class="row">
                    @if (string.IsNullOrEmpty(Model.t))
                    {
                        <partial name="_RoomList" />
                    }
                    else
                    {
                        <partial name="_RoomList2" />
                    }
                    @if (string.IsNullOrEmpty(Model.t))
                    {
                        <div class="col-lg-12">
                            <p>You are soley responsibile for any information shared in any room, discussion or conversation anywhere on this platform.</p>
                            <div class="gradient-button">
                                <a asp-action="index" asp-controller="rooms" asp-route-t="personal">More Personal Rooms</a>
                                <a asp-action="create" asp-controller="rooms" asp-route-t="personal">Create New Room</a>

                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
