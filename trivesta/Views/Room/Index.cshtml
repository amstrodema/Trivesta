@model Trivesta.Model.ViewModel.RoomsVM
@{
    ViewData["Title"] = "Profile";
}

<div class="push-banner wow fadeIn" id="top" data-wow-duration="1s" data-wow-delay="0.5s">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-6 order-2 order-md-1 align-self-center">
                        <div class="left-content show-up header-text wow fadeInLeft" data-wow-duration="1s" data-wow-delay="1s">
                            <div class="row">
                                <div class="col-lg-12">
                                    <small class="bold uppercase text-muted">Public</small>
                                    <h1 class="bold uppercase">Friendship Room.</h1>
                                    <hr />
                                    <h2>The rules here are simple</h2>
                                    <p>Chain App Dev is an app landing page HTML5 template based on Bootstrap v5.1.3 CSS layout provided by TemplateMo, a great website to download free CSS templates.</p>
                                </div>
                                <div>
                                    <p class="bold">New members will be charged a one time house fee of 600coins</p>
                                </div>
                                <div class="col-lg-12">
                                    <div class="gradient-button">
                                        <a asp-action="index" asp-controller="rooms" asp-route-t="classy">Create New Room <i class="fa fa-plus"></i></a>
                                        <a asp-action="chat" asp-controller="room" asp-route-t="classy">Enter This Room <i class="fa fa-plug"></i></a>
                                    </div>
                                </div>
                            </div>
                      
                        </div>
                    </div>
                    <div class="col-lg-6 order-1 order-md-2 mb-5">
                        <div class="right-image wow fadeInRight" data-wow-duration="1s" data-wow-delay="0.5s">
                            <img src="assets/images/slider-dec.png" alt="">
                        </div>
                    </div> 
                </div>
            </div>
        </div>
    
    </div>
</div>

                        