@using trivesta.Services;
@inject LoginValidator loginValidator
@{
    ViewData["Title"] = "Home Page";
    var user = await loginValidator.GetUserAuth();
}

<div class="main-banner wow fadeIn" id="top" data-wow-duration="1s" data-wow-delay="0.5s">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-6 align-self-center">
                        <div class="left-content show-up header-text wow fadeInLeft" data-wow-duration="1s" data-wow-delay="1s">
                            <div class="row">
                                <div class="col-lg-12">
                                    <h2>Free Instant Chat and Messaging Rooms</h2>
                                    <p>Tivesta is all about catching fun and meeting awesome new people. Jump in and let the good times roll!  #FunTimes #MeetNewPeeps</p>
                                           </div>
                                <div class="col-lg-12">
                                    <div class="white-button first-button scroll-to-section">
                                        <a asp-action="index" asp-controller="rooms">Rooms <i class="fa fa-users"></i></a>
                                    </div>
                                    <div class="white-button scroll-to-section">
                                        <a asp-action="random" asp-controller="rooms">Instant Chat <i class="fa fa-comment"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 flair">
                        <div class="right-image wow fadeInRight" data-wow-duration="1s" data-wow-delay="0.5s">
                            <img src="./assets/images/svg/dialog-bro.svg" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="services" class="services section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="section-heading  wow fadeInDown" data-wow-duration="1s" data-wow-delay="0.5s">
                    <h4>Amazing <em>Concepts &amp; Features</em> for you</h4>
                    <img src="assets/images/heading-line-dec.png" alt="">
                    <p>From cool chats to meeting awesome new people, it's all about making your experience unforgettable. Enjoy the many free rooms, create rooms, demand rent for your rooms, pay rent for rooms, share coins with willing buyers and watch out for decay</p>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="service-item first-service">
                    <div class="icon"></div>
                    <h4>Public Rooms</h4>
                    <p>This is like stepping into a vibrant virtual hangout that's open to you and everyone else, including guests.</p>
                    <div class="text-button">
                        <a asp-action="index" asp-controller="rooms" asp-route-t="public">View Rooms <i class="fa fa-arrow-right"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="service-item second-service">
                    <div class="icon"></div>
                    <h4>Private Rooms</h4>
                    <p>This room is open to you and everyone else, except guests. Owners may or may not demand rent from users</p>
                    <div class="text-button">
                        <a asp-action="index" asp-controller="rooms" asp-route-t="private">View Rooms <i class="fa fa-arrow-right"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="service-item third-service">
                    <div class="icon"></div>
                    <h4>Classy Rooms</h4>
                    <p>Higher standard for users who appreciate elevated vibes. It's a space where exclusivity meets sophistication</p>
                    <div class="text-button">
                        <a asp-action="index" asp-controller="rooms" asp-route-t="classy">View Rooms <i class="fa fa-arrow-right"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="service-item fourth-service">
                    <div class="icon"></div>
                    <h4>Personal Rooms</h4>
                    <p>Cozy corners designed just for you. Intimate one-on-one or small group conversations, ensuring a confidential setting for personal talks</p>
                    <div class="text-button">
                        <a asp-action="index" asp-controller="rooms" asp-route-t="personal">View Rooms <i class="fa fa-arrow-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

